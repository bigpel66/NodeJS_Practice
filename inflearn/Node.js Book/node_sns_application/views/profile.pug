extends layout

block content
    .timeline
        form#profile-form(method='POST', action='/user/profile')
            input(name='nickname')
            button Change Nickname
        .followings.half
            h2 Followings
            if user.Followings
                for following in user.Followings
                    div= following.nickname
        .followers.half
            h2 Followers
            if user.Followers
                for follower in user.Followers
                    div= follower.nickname